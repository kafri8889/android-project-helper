<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaPlayerHelperActivity">

    <Button
        android:id="@+id/buttonMediaPlayerHelperPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/buttonMediaPlayerHelperPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="pause"
        app:layout_constraintStart_toEndOf="@id/buttonMediaPlayerHelperPlay"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/buttonMediaPlayerHelperStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="stop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonMediaPlayerHelperPause"/>

    <TextView
        android:id="@+id/textViewMediaPlayerHelperDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="duration"
        android:textSize="20sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/buttonMediaPlayerHelperPlay"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>