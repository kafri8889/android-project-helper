<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationHelperActivity">

    <Button
        android:id="@+id/buttonNotificationMakerSimpleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simple notif"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonNotificationMakerBigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Text"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonNotificationMakerSimpleNotification"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonNotificationMakerBigPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Picture"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonNotificationMakerBigText"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonNotificationMakerInbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inbox"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonNotificationMakerBigPicture"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>